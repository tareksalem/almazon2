					</div>		
					<div class="item slides">
						<div class="row slides">
							{{#if product3}}
								{{#each product3}}
									<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 container-product">
										<div class="slide-inner">
											<h3 class="title-slide">{{this.productTitle}}</h3>
											<img src="{{this.productImage}}" class="img-responsive" />
											<div class=" slide-price-btn">
												<p>{{this.productPrice}}</p>
												<p class="slide-btn"><a href="#">اشتري الأن</a></p>
