<div class="container container-fluid container-signup">
    <form class="signup" method="POST" action="/buyer/signup">
      {{# if hasErrors}}
      {{#each error}}
      <div class="alert alert-danger" style="width:80%;margin:auto;">
      <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
        {{this}}
    </div>
    {{/ each}}
  {{/ if}}
  {{#if errors}}
  {{#each errors}}
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">
              <span class="glyphicon glyphicon-remove"></span>
            </a>
            {{msg}}
          </div>
        {{/each}}
      {{/if}}
      <div class="form-group">
        <label for="username">اسم المستخدم</label>
        <input type="text" name="username" class="username" id="username" placeholder="اسم المستخدم">
      </div>
      <div class="form-group">
        <label for="email">الايميل</label>
        <input type="text" name="email" class="email" id="email" placeholder="الايميل">
      </div>
      <div class="form-group">
        <label for="password">كلمة المرور</label>
        <input type="password" name="password" class="password" id="password" placeholder="كلمة المرور">
      </div>
      <div class="form-group">
        <label for="confirmpassword">تأكيد كلمة المرور</label>
        <input type="password" name="confirmpassword" class="confirmpassword" id="confirmpassword"  placeholder="تأكيد كلمة المرور">
      </div>
      <div class="form-group">
  <!--      <input type="file" name="profileimage" class="profileimage" id="profileimage" style="display:none;">
        <button type="button" class="uploadImage"><i class="fa fa-upload" aria-hidden="true"></i> اختار صورتك</button>-->
